@model IEnumerable<Note>

@{
	ViewData["Title"] = "Notes";
}

<h1>Notes</h1>

<h5>All your notes, here.</h5>

<a asp-action="Create" class="btn btn-primary mb-3">Add new</a>

<table class="table">
	<thead>
		<th>Note</th>
		<th>Importance</th>
		<th>Creation Date</th>
		<th>Likes</th>
		<th>Actions</th>
	</thead>

	<tbody>
		@foreach (Note n in Model)
		{
			<tr>
				<td> @n.Text</td>
				<td> @n.NoteImportance.Importance</td>
				<td> @n.CreationDate</td>
				<td> @n.Likes.Count</td>
				<td>
					<a class="btn btn-primary" asp-action="Edit" asp-route-id="@n.Id"><i class="bi-pencil-fill"></i></a>
					<a class="btn btn-danger" asp-action="Delete" asp-route-id="@n.Id"><i class="bi-trash-fill"></i></a>
				</td>
			</tr>
		}
	</tbody>

</table>